div#custom-services(layout="row" layout-wrap)
	div(ng-repeat="i in cs.data" flex="25" flex-md="50" flex-sm="100")
		md-card.md-whiteframe-z2
			md-card-content(layout="column" layout-align="start center")
				a(href="{{i.href}}" layout="column" layout-align="start center")
					//- ng-md-icon(icon="{{ i.icon }}" size="64" style="fill:#d52dec")
					ng-md-icon(icon="{{ i.icon }}" size="64" style="fill:#2cbfd9")
					h2.md-title {{ i.title }}
				p(ng-repeat="t in i.text") {{ t }}