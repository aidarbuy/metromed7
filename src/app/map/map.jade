#map.md-padding

	h1.md-display-1.md-primary-txt.center-txt Our Location

	div(layout="row" layout-wrap)
		//- Address
		div(flex="100" flex-order="0" flex-gt-sm="50" flex-order-gt-sm="0" flex-gt-lg="33")
			md-card.map-credentials.md-whiteframe-z1
				md-card-content
					md-button.md-primary.md-hue-2.md-raised(flex href="http://maps.google.com/?q=952 Edwards Ferry Road NE, Leesburg, Virginia, 20176")
						md-tooltip.tooltip-big Open MetroMed Urgent Care on Google Maps
						md-list-item.md-2-line
							md-icon(md-svg-src="assets/icons/location.svg")
							.md-list-item-text(layout="column" layout-align="center start")
								h3.cap 952 Edwards Ferry Road NE
								p.cap Leesburg VA 20176

		//- Phone
		div(flex="100" flex-order="2" flex-gt-sm="50" flex-order-gt-sm="1" flex-gt-lg="33")
			md-card.map-credentials.md-whiteframe-z1
				md-card-content
					md-button.md-primary.md-hue-2.md-raised(flex href="tel:(703) 687-4158")
						md-tooltip.tooltip-big Make a phone call to MetroMed Urgent Care
						md-list-item.md-2-line
							md-icon(md-svg-src="assets/icons/ic_phone_24px.svg")
							.md-list-item-text(layout="column" layout-align="center start")
								h3 (703) 687-4158
								//- p Every day from 10am to 8pm
								p Mon-Fri: 10am to 8pm, Sat: 10am to 5pm

		//- Email
		div(flex="100" flex-order="3" flex-gt-lg="33" flex-order-gt-lg="2")
			md-card.map-credentials.md-whiteframe-z1
				md-card-content
					md-button.md-primary.md-hue-2.md-raised(flex href="mailto:info@metromeduc.com")
						md-tooltip.tooltip-big Write an email to MetroMed Urgent Care
						md-list-item.md-2-line
							md-icon(md-svg-src="assets/icons/ic_email_24px.svg")
							.md-list-item-text(layout="column" layout-align="center start")
								h3 info@metromeduc.com
								p 24 hours a day 7 days a week

		//- Map
		md-card.ng-gmap.md-whiteframe-z2(flex="100" flex-order="1" flex-order-gt-lg="3")
			md-card-content
				ui-gmap-google-map(center='gmap.map.center' zoom='gmap.map.zoom')
					ui-gmap-marker(idKey='gmap.marker.id' coords='gmap.marker.coords')


metromed-footer